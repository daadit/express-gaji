<!DOCTYPE html>
<html>

<head>
    <title>Laporan Data Gaji</title>
    <link rel="shortcut icon" href="{{ asset('assets') }}/images/auth/logo.png">
    <style type="text/css">
        .head {
            border-style: double;
            border-width: 3px;
            border-color: white;
        }

        .body {
            border-collapse: collapse;
            border: 1px;
            border-color: black;
        }

        table tr .text2 {
            text-align: right;
            font-size: 13px;
        }

        table tr .text {
            text-align: center;
            font-size: 13px;
        }

        table tr td {
            font-size: 13px;
        }
    </style>
</head>

<body>
    <center>
        <table class="head" width="625">
            <tr>
                <td><img src="/images/auth/logoa.png" width="90" height="90"></td>
                <td>
                    <center>
                        <!-- <font size="4">TOKO 73</font><br> -->
                        <font size="5"><b>JAYANUSA FESTIVAL</b></font><br>
                        <font size="2">Alamat : Kota Padang, Sumatera Barat</font><br>
                        <font size="2"><i>Email : jayanusa@gmail.com Telp./Fax 0821-7153-8531</i></font>
                    </center>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <hr>
                </td>
            </tr>
            <table width="625" class="head">
                <tr>
                    <td class="text2">Padang, 15 Juli 2022</td>
                </tr>
            </table>
        </table>
        <table class="head" style="margin-bottom: 20px;">
            <tr>
                <td>Laporan Data Gaji</td>
            </tr>
        </table>
        <table border="1" class="body" width="700">
            <thead>
                <tr style="height: 25px;">
                    <th>Periode</th>
                    <th>Nama Karyawan</th>
                    <th>Gaji Pokok</th>
                    <th>T. Jabatan</th>
                    <th>T. Keluarga</th>
                    <th>T. Anak</th>
                    <th>Total Gaji</th>
                </tr>
            </thead>
            <tbody>
                <% gaji.forEach(function(data) { %>
                    <tr style="height: 20px; text-align: center;">
                        <td><%= data.gaji_bulan %> - <%= data.gaji_tahun %></td>
                        <td><%= data.gaji_nama %></td>
                        <td><%= data.gaji_gaji_pokok %></td>
                        <td><%= data.gaji_tunjangan_jabatan %></td>
                        <td><%= data.gaji_tunjangan_keluarga %></td>
                        <td><%= data.gaji_tunjangan_anak %></td>
                        <td><%= data.gaji_total_gaji %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </center>
</body>

<script>
    window.print();
</script>

</html>